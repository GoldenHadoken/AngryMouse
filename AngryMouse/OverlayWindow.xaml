<Window x:Class="AngryMouse.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngryMouse"
        mc:Ignorable="d"
        Title="OverlayWindow"
        ShowInTaskbar="False"
        Topmost="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        AllowDrop="False"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized"
        Loaded="Window_Loaded">
    <Grid Name="Root">
        <Viewbox Name="Viewbox">
            <Canvas Name="OverlayCanvas">
                <Path Name="BigCursor" Fill="#FFFFFFFF" Stroke="Black" StrokeThickness="25" Visibility="Hidden">
                    <Path.Data>
                        <PathGeometry Figures="M 0,-0.551 V 799 L 201,599 321,890 401,850 276,549 h 275 z" FillRule="NonZero"/>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
